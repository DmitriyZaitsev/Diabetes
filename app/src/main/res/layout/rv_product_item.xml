<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_productGroupHeader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/indigo400"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:text="Group name"/>

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_itemHeight"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Very very very very long long long product name"/>

        <TextView
            android:id="@+id/product_carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="234232314324"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorForDivider"/>

</LinearLayout>